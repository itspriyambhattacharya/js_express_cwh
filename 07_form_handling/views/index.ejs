<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Form Submission Using Express.js and MySQL</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT"
      crossorigin="anonymous"
    />
  </head>
  <body class="bg-dark text-white">
    <div id="form-div" class="container my-5">
      <h1 class="text-center">Registration Form</h1>
      <form action="/" method="post">
        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <input
            type="text"
            class="form-control"
            id="name"
            placeholder="Abhijeet Dey"
            name="name"
            required
          />
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email address</label>
          <input
            type="email"
            class="form-control"
            id="email"
            placeholder="name@example.com"
            name="email"
            required
          />
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input
            type="password"
            id="password"
            class="form-control"
            name="password"
            aria-describedby="passwordHelpBlock"
            required
          />
        </div>
        <div class="mb-3">
          <label for="yr-income" class="form-label">Yearly Income</label>
          <select id="yr-income" class="form-select" name="yr-income">
            <option selected>Select an Option</option>
            <option value="1">Less than 100000</option>
            <option value="2">100000 to 250000</option>
            <option value="3">Greater than 250000</option>
          </select>
        </div>
        <div class="mb-3">
          <label for="vehicle" class="form-label">Vehicle Owned</label>
          <div class="form-check">
            <input
              class="form-check-input"
              type="checkbox"
              value="1"
              id="bike"
              name="vehicle[]"
            />
            <label class="form-check-label" for="bike"> Bike </label>
          </div>
          <div class="form-check">
            <input
              class="form-check-input"
              type="checkbox"
              value="2"
              id="car"
              name="vehicle[]"
            />
            <label class="form-check-label" for="car"> Car </label>
          </div>
        </div>
        <div class="mb-3">
          <label for="age" class="form-label">Age</label>
          <div class="form-check">
            <input
              class="form-check-input"
              type="radio"
              name="age"
              id="age-below"
              value="1"
            />
            <label class="form-check-label" for="age-below"> Below 18 </label>
          </div>
          <div class="form-check">
            <input
              class="form-check-input"
              type="radio"
              name="age"
              id="age-above"
              value="2"
            />
            <label class="form-check-label" for="age-above"> Above 18 </label>
          </div>
        </div>
        <div class="mb-3 d-flex justify-content-center">
          <button type="submit" class="btn btn-light btn-lg" id="submit-btn">
            Register
          </button>
        </div>
      </form>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
